{
  "name": "medication-tracker",
  "version": "1.0.0",
  "description": "A web application for medication tracking.",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build --outDir ../dist",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test:local": "vitest run --passWithNoTests",
    "test:ci": "vitest run",
    "audit-fix": "npm audit fix --force",
    "ci": "npm install && npm ci && npm audit --audit-level=high && npm run type-check && npm run lint && npm run test:local && npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.7"
  }
}
